<div class="post-list-title">
  <h2 class="col-sm-12 col-md-6"> Search Results</h2>
</div>

<div class="row martialart-posts">
  <%  listOfResults.forEach((oneMartialArt) => { %>
    <div class="col-sm-12 col-md-6 col-lg-4 all-posts">
      <h3>
        <%= oneMartialArt.name %>
      </h3>
      <h3>
        <%= oneMartialArt.title %>
      </h3>
      <img src="<%= oneMartialArt.image %>" />

      <p>
        <%= oneMartialArt.description %>
      </p>

      <p>
        <%= oneMartialArt.location %>
      </p>


      <a href="/martialarts/<%= oneMartialArt._id %>">
        View details
      </a>

      <%  if (currentUser.email === oneMartialArt.creator) { %>
        <a href="/martialarts/<%=oneMartialArt._id %>/edit">
          Edit Details
        </a>
        <%} %>
          <% if (currentUser.email === oneMartialArt.creator) { %>
            <form method="post" action="/martialarts/<%=oneMartialArt._id %>/delete">
              <btn> Delete Post </btn>
            </form>

            <%} %>
    </div>
    <% }); %>
</div>