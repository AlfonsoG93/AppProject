<h2> Kumeet Posts</h2>

<ul>
  <%  listOfMartialArts.forEach((oneMartialArt) => { %>
    <li>
      <h3> <%= oneMartialArt.name %> </h3>
      <h3>
        <%= oneMartialArt.title %>
      </h3>
      <img src="<%= oneMartialArt.image %>" />

      <p>
        <%= oneMartialArt.description %>
      </p>

      <p>
        <%= oneMartialArt.location %>
      </p>

      <ul>
        <li>
          <a href="/martialarts/<%= oneMartialArt._id %>">
        View details
          </a>

        </li>

          <%  if (currentUser._id.toString() === oneMartialArt.creator.toString()) { %>
            <li>
            <a href="/martialarts/<%=oneMartialArt._id %>/edit">
        Edit Details
        </a>
        </li>
            <%} %>

      </ul>
    </li>
    <% }); %>
</ul>
