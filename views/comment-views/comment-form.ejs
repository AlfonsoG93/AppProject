<h2> Write a comment </h2>


<% if(typeof validationErrors !== "undefined") { %>
  <ul class="error">
    <% for (let field in validationErrors){ %>
      <li>
        <%= validationErrors[field].message %>
      </li>
      <% } %>
  </ul>
  <% } %>


<h3><%= MaDetails.name %> </h3>
<img src="<%= MaDetails.image %>" />

<form action="/martialarts/<%= MaDetails._id %>/comments" method="post">

  <label for="comment-content"> Your Comment </label>
  <textarea id="comment-content" name="commentContent" placeholder="e.g Blah"></textarea>
<br/>

  <button> Submit Comment </button>

</form>
